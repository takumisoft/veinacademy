<div class="zy-postcard 
    {% if p.terms %}
        {% for t in p.terms %}
            {% if t.parent != '0' %}
                {{ t.name|lower|replace({" ":""}) }} 
            {% elseif t.taxonomy == 'category' %}
                {{ t.name|lower|lower|replace({" ":""}) }}
            {% endif %}
        {% endfor %}
    {% else %}
        {{ p.post_type }}
    {% endif %}">
    <div class="zy-postcard-wrapper">
        <div class="zy-postcard-post-type">
            {% if p.terms %}
                {% for t in p.terms %}
                    {% if t.parent == '0' and t.taxonomy != 'speaker' %}
                        <span>{{ t.name }}</span>
                    {% endif %}
                {% endfor %}
            {% else %}
                <span>{{ p.type }}</span>
            {% endif %}
                - {{ p.date }}{% if p.meta('video_time') %}<br>Video Time {{ p.meta('video_time') }}{% endif %}
        </div>
        {% if p.meta('thumbnail-image') %}
            <div class="zy-postcard-thumbnail">
                <a href="{{ p.link }}" class="zy-postcard-thumbnail-image" style="background-image: url({{ p.thumbnail }})"></a>
            </div>
        {% elseif p.thumbnail %}
            <div class="zy-postcard-thumbnail">
                <a href="{{ p.link }}" class="zy-postcard-thumbnail-image" style="background-image: url({{ p.thumbnail }})"></a>
            </div>
        {% endif %}
        <div class="zy-postcard-content">
            <div class="zy-postcard-title">
                <p class="speakers">
                    {% for s in p.terms %}
                        {% if s.taxonomy == 'speaker' %}
                            <span>{{ s.name }}</span>
                        {% endif %}
                    {% endfor %}
                </p>
                <h3><a href="{{ p.link }}">{{ p.post_title }}</a></h3>
                <h4>{{ p.subtitle }}</h4>
                
            </div>
        </div>
    </div>
    {% if p.post_type == 'book' %}
        <div class="zy-postcard-pdf">
            <a href="{{ site.url }}/wp-content/uploads/{{ p.meta('resources_file').filename  }}" target="_blank"><h4>Download PDF <img src="{{ base_url }}/new-assets/img/download-pdf.png"></h4></a>
        </div>
    {% endif %}
    {% if p.post_type == 'website' %}
        <div class="zy-postcard-website">
            <a href="{{ p.resources_url }}"><h4>Visit Website ></h4></a>
        </div>
    {% endif %}
    {% if p.post_type == 'apps' %}
        <div class="zy-postcard-app">
            <a href="{{ p.meta('url_app_store') }}"><img src="{{ base_url }}/new-assets/img/Store=App Store, Style=Black.png"></a>
            <a href="{{ p.meta('url_google_play') }}"><img src="{{ base_url }}/new-assets/img/Store=Google Play, Style=Black.png"></a>
        </div>
    {% endif %}
    <div class="zy-postcard-readmore">
        <a href="{{ p.link }}"><h4>Read more <img src="{{ base_url }}/new-assets/img/read-more.png"></h4></a>
    </div>
</div>